@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>GARITS | Login</title>

    <style>

        .form-group {
            width: 300px;
        }

        html, body {
            background: #485563; /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #29323c, #485563); /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #29323c, #485563); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }

        .title {
            display: block;
            text-align: center;
            margin-bottom: 40px;
        }

        .main {
            background-color: #FFFFFF;
            border-radius: 10px;
            position: absolute;
            top: 50%;
            left: 50%;
            padding: 30px;
            -ms-transform: translateX(-50%) translateY(-50%);
            -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }

        .info {
            position: absolute;
            right: 30px;
            color: #4A5056;
            background-color: #EAECEF;
        }

        .popover {
            width: 200px;
        }
    </style>
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/j
            /3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>

<body>
    <div class="main">


        <h2 class="title">GARITS</h2>

        @if ((bool)ViewData["LoginError"] == true)
        {
            <div class="alert alert-danger" role="alert">
                Your username or password is incorrect.
            </div>
        }

        <form action="PostLogin" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" tabindex="1" type="text" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Username">
                <small id="usernameHelp" class="form-text text-muted">Please enter your GARITS username.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" tabindex="2" type="password" class="form-control" id="password" aria-describedby="passwordHelp" placeholder="Password">
                <small id="passwordHelp" class="form-text text-muted">Please enter your password.</small>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-primary">Login</button>
                <a tabindex="3" class="info btn btn-secondary" role="button" data-toggle="popover" data-trigger="focus" title="Login Help" data-content="Please use your GARITS username and password provided by you system administrator to login. Please contact your system administrator if you need assistance."><i class="fas fa-info"></i></a>
            </div>
        </form>
    </div>


    <script>
        $(document).ready(function(){
            $('[data-toggle="popover"]').popover();
            $('[data-toggle="popover"]').popover({
                container: 'body'
            });
            $('.popover-dismiss').popover({
                trigger: 'focus'
            })
        });
    </script>

</body>

</html>