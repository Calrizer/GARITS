
@{

    var notes = (JobNote)ViewData["InvoiceNote"];
    var job = (Job)ViewData["JobDetails"];
    var partsTotal = 0.0;
    var labourTotal = 0.0;
    var discount = 0.0;
    var total = 0.0;
    var month = "";

    switch (DateTime.Today.Month.ToString())
    {

        case "1":
            month = "January";
            break;
        case "2":
            month = "February";
            break;
        case "3":
            month = "March";
            break;
        case "4":
            month = "April";
            break;
        case "5":
            month = "May";
            break;
        case "6":
            month = "June";
            break;
        case "7":
            month = "July";
            break;
        case "8":
            month = "August";
            break;
        case "9":
            month = "September";
            break;
        case "10":
            month = "October";
            break;
        case "11":
            month = "November";
            break;
        case "12":
            month = "December";
            break;
        default:
            month = "Error";
            break;

    }

}

<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">

        <tr class="information">
            <td colspan="2">
                <table>
                    <tr>
                        <td>
                            @job.customer.firstname @job.customer.lastname<br>
                            @job.customer.addressline1<br>
                            @job.customer.addressline2<br>
                            @job.customer.county<br>
                            @job.customer.postcode<br>
                            <br>
                            Dear @(job.customer.title + ".") @job.customer.lastname,
                        </td>

                        <td>
                            Quick Fix Fitters<br>
                            19 High Street<br>
                            Ashford<br>
                            Kent<br>
                            CT16 8YY<br>
                            <br>
                            @DateTime.Today.Day @month @DateTime.Today.Year
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <div class="invoice-number">

        <h5>INVOICE NO: @("J" + job.jobID)</h5>

    </div>

    <br>
    <br>

    <p>
        Vehicle Registration No: @job.vehicle.vrm<br>
        Make: @job.vehicle.make<br>
        Model: @job.vehicle.model<br>
    </p>

</div>