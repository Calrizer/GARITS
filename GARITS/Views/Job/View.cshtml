
@{

    var jobs = (List<Job>) ViewData["Jobs"];
    
}

<div class="row">


    <div class="col-md-12">

        <div class="card">

            <div class="card-header" style="display: inline-block">

                <div style="display: inline-block; margin-top: 8px">
                    <h5>View Jobs</h5>
                </div>

            </div>

        </div>

    </div>
    

</div>

<br>

<div class="row">
    
    <div class="col-md-3">
        
        <div class="card">
            
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <form action="~/Job/Search" method="post">
                    <div class="form-group">
                        <input name="search" tabindex="1" type="text" class="form-control" id="search" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                
            </div>
            
        </div>
        
        <br>
    
        <div class="card">
            <h5 class="card-header">Filter</h5>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Complete
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Paid
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Awaiting Payment
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Ongoing
                </li>
            </ul>
        </div>
        
        <br>
        
        <div class="card">
            <h5 class="card-header">Range</h5>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Start: @DateTime.Today.Day/@DateTime.Today.Month/@DateTime.Today.Year
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    End: @DateTime.Today.Day/@DateTime.Today.Month/@DateTime.Today.Year
                </li>
              
            </ul>
        </div>
        
    </div>

    <div class="col-md-9 parts-list">

        <p>@jobs.Count jobs found.</p>
        
        <hr>
        
        @foreach (Job job in jobs)
        {
            
            <h5>@("J" + job.jobID)</h5>
            <p>@job.status</p>
            <p style="padding: 10px 10px 10px 0"><span class="registration-ui">@job.vehicle.vrm</span></p>
            <p>Started: @job.start.ToShortDateString() - Finished: @job.end.Value.ToShortDateString()</p>
            <div style="display: inline-block; margin-top: 10px">
                <a class="btn btn-primary" style="margin-right: 5px" href="~/Job/ViewJob?id=@job.jobID" role="button">View Job</a>  
                
                @if (job.status.Contains("Complete"))
                {
                    
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Actions
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Job Sheet</a>
                            <a class="dropdown-item" href="#">Invoice</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">First Reminder</a>
                            <a class="dropdown-item" href="#">Second Reminder</a>
                            <a class="dropdown-item" href="#">Final Reminder</a>
                        </div>
                    </div>
                    
                }
                
            </div>
            <hr>

        }

    </div>

</div>