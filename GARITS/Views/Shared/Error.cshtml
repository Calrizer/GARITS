@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Uh oh!</h1>
<h2 class="text-danger">An unexpected error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
<p>
    <strong>Error Code:</strong> <code>@Model.RequestId</code>
</p>
}

<h2>Please try again or report the error to your system administrator.</h2>
